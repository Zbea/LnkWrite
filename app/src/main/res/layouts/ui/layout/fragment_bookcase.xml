<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <include layout="@layout/common_fragment_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="@string/my_bookshelf"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            />

        <TextView
            android:id="@+id/tv_book_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:gravity="center"
            android:text="@string/categorized_display"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/click_btn_transparent_line_black"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_book_top"
        android:layout_width="wrap_content"
        android:layout_height="254dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_content_up"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            android:padding="1dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv_content_down"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            android:padding="1dp"
            android:scaleType="fitXY"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_22"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        />


</LinearLayout>
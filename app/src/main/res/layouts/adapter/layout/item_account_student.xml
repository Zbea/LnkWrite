<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/tv_student_id"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        />
    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        />

    <TextView
        android:id="@+id/tv_student_grade"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        />

    <TextView
        android:id="@+id/tv_student_school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        />

    <TextView
        android:id="@+id/tv_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/permission_setting"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        />

    <TextView
        android:id="@+id/tv_student_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:gravity="center"
        android:text="@string/account_unbind_student_str"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        />

</LinearLayout>